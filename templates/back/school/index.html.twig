{% extends 'base.html.twig' %}

{% block title %}School index{% endblock %}

{% block body %}
    <h1>School index</h1>

    <table class="table">
        <thead>
            <tr>
                <th {% if pagination.isSorted('id') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Id', 'id') }}</th>
                <th {% if pagination.isSorted('name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Nom', 'name') }}</th>
                <th {% if pagination.isSorted('number') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Numéro', 'number') }}</th>
                <th {% if pagination.isSorted('email') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Email', 'email') }}</th>
                <th {% if pagination.isSorted('academy') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Académie', 'academy') }}</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for school in pagination %}
            <tr>
                <td>{{ school.id }}</td>
                <td>{{ school.name }}</td>
                <td>{{ school.number }}</td>
                <td>{{ school.email }}</td>
                <td>{{ school.academy }}</td>
                <td>
                    <a href="{{ path('school_show', {'id': school.id}) }}">show</a>
                    <a href="{{ path('school_edit', {'id': school.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ include('back/partials/_pagination.html.twig') }}
    <a href="{{ path('school_new') }}">Create new</a>
{% endblock %}
