{% extends 'base.html.twig' %}

{% block title %}Referent{% endblock %}

{% block body %}
    <h1>Referent</h1>

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ referent.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ referent.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ referent.lastname }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ referent.gender }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('referent_index') }}">back to list</a>

    <a href="{{ path('referent_edit', {'id': referent.id}) }}">edit</a>

    {{ include('referent/_delete_form.html.twig') }}

    <div style="width: 50%">
        <table id="referent_students" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>id</th>
                    <th>firstname</th>
                    <th>lastname</th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $(document).ready( function () {
            $('#referent_students').DataTable({
                ajax: {
                    url: '{{ path('referent_students', {id: referent.id}) }}',
                    dataSrc: ''
                },
                columns: [
                    { data:'id'},
                    { data:'firstname'},
                    { data:'lastname'}
                ],
            });
        } );
    </script>
{% endblock %}