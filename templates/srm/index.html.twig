    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for srm in srms %}
            <tr>
                <td>{{ srm.id }}</td>
                <td>{{ srm.name }}</td>
                <td>{{ srm.email }}</td>
                <td>
