{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}
    <h1>Student index</h1>

    <table id="students_list" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>id</th>
                <th>Civilité</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Ville</th>
                <th>Date de naissance</th>
                <th>Spécialisation</th>
                <th>Lycée</th>
                <th>SRM</th>
                <th>CIRFA</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

    <a href="{{ path('student_new') }}">Create new</a>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $(document).ready( function () {
            $('#students_list').DataTable({
                ajax: {
                    url: '{{ path('students_list') }}',
                    dataSrc: ''
                },
                columns: [
                    { data:'id'},
                    { data:'gender'},
                    { data:'firstname'},
                    { data:'lastname'},
                    { data:'city'},
                    { data:'birthdate'},
                    { data:'specialisation.name'},
                    { data:'school.name'},
                    { data:'srm.name'},
                    { data:'cirfa.city'},
                ],
            });
        } );
    </script>
{% endblock %}
