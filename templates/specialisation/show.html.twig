{% extends 'base.html.twig' %}

{% block title %}Specialisation{% endblock %}

{% block body %}
    <h1>Specialisation</h1>

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ specialisation.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ specialisation.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('specialisation_index') }}">back to list</a>

    <a href="{{ path('specialisation_edit', {'id': specialisation.id}) }}">edit</a>

    {{ include('specialisation/_delete_form.html.twig') }}

    <table id="competences_list" class="table table-striped table-bordered">

    </table>
    
    <table id="tps_list" class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ specialisation.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ specialisation.name }}</td>
            </tr>
        </tbody>
    </table>

    <table id="students_list" class="table table-striped table-bordered" style="width:100%">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ specialisation.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ specialisation.name }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $(document).ready( function () {
            $('#competences_list').DataTable({
                ajax: {
                    url: '{{ path('competences_specialisation_list', {id: specialisation.id}) }}',
                    dataSrc: ''
                },
                columns: [
                    {
                        title: 'id',
                        data:'id'
                    },
                    {
                        title:'Référence',
                        data:'reference'
                    },
                    {
                        title: 'Intitulé',
                        data:'name'
                    },
                ],
            });
        } );
    </script>
{% endblock %}