{% extends 'base.html.twig' %}

{% block title %}New Student{% endblock %}

{% block body %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} mt-4">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <h1>Importer des élèves depuis un fichier excel</h1>
    <div class="card my-3">
        <div class="card-body">
            <p class="card-text text-right">
                {{ include('front/student/_form.html.twig') }}
            </p>
        </div>
    </div>

    <a href="{{ path('student_index') }}">Retour à l'interface administrateur</a>
{% endblock %}
