{% extends 'base.html.twig' %}

{% block title %}Elève{% endblock %}

{% block body %}

<div class="container">
    <h1>Elève</h1>

    <div class="white_shadow--container">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                        <th>Civilité</th>
                        <th>Prénom</th>
                        <th>Nom</th>
                        <th>Lycée</th>
                        <th>Spécialisation</th>
                        <th>Prof. Principal</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                        <td>{{ student.gender }}</td>
                        <td>{{ student.firstname }}</td>
                        <td>{{ student.lastname }}</td>
                        <td>{{ student.school.name }} ({{ student.school.academy }})</td>
                        <td>{{ student.specialisation.name }}</td>
                        <td>{{ student.referent.gender ~ ' ' ~ student.referent.lastname ~ ' ' ~ student.referent.firstname }}</td>
                </tr>
            </tbody>
        </table>  
    </div>

    <div class="card my-3">
        <div class="card-body">
            <h5 class="card-title">Evaluer</h5>
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn">{{ button_label|default('Evaluer') }}</button>
            {{ form_end(form) }}
        </div>
    </div>

    <a href="{{ path('student_show', {"id": student.id}) }}">retour</a>
</div>



{% endblock %}
