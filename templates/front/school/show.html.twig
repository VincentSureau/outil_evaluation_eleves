{% extends 'base.html.twig' %}

{% block title %}School{% endblock %}

{% block body %}
    <h1>School</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ school.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ school.name }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ school.number }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ school.email }}</td>
            </tr>
            <tr>
                <th>Academy</th>
                <td>{{ school.academy }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('school_index') }}">retour</a>

    <div style="">
        <table id="school_students" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Civilité</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Ville</th>
                    <th>Date de naissance</th>
                    <th>Spécialisation</th>
                    <th>SRM</th>
                    <th>CIRFA</th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $(document).ready( function () {
            $('#school_students').DataTable({
                ajax: {
                    url: '{{ path('students_school_list', {id: school.id}) }}',
                    dataSrc: ''
                },
                columns: [
                    { data:'id'},
                    { data:'gender'},
                    { data:'firstname'},
                    { data:'lastname'},
                    { data:'city'},
                    { data:'birthdate'},
                    { data:'specialisation.name'},
                    { data:'srm.name'},
                    { data:'cirfa.city'},
                ],
            });
        } );
    </script>
{% endblock %}