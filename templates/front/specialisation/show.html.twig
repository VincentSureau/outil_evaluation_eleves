{% extends 'base.html.twig' %}

{% block title %}Specialisation{% endblock %}

{% block body %}
    <h1>Specialisation</h1>

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ specialisation.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ specialisation.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('specialisation_index') }}">retour</a>

    <div class="d-flex align-items-start justify-content-around">
        <table id="tasks_list" class="table table-striped table-bordered">

        </table>
        
        <table id="tps_list" class="table table-striped table-bordered">

        </table>
    </div>


    <table id="students_list" class="table table-striped table-bordered">

    </table>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $(document).ready( function () {
            $('#tasks_list').DataTable({
                ajax: {
                    url: '{{ path('tasks_specialisation_list', {id: specialisation.id}) }}',
                    dataSrc: ''
                },
                columns: [
                    {
                        title:'Référence',
                        data:'reference'
                    },
                    {
                        title: 'Intitulé',
                        data:'name'
                    },
                ],
            });
        } );

        $(document).ready( function () {
            $('#tps_list').DataTable({
                ajax: {
                    url: '{{ path('specialisation_tps_list', {id: specialisation.id}) }}',
                    dataSrc: ''
                },
                columns: [
                    {
                        title:'Intitulé',
                        data:'name'
                    },
                ],
            });
        } );

        $(document).ready( function () {
            $('#students_list').DataTable({
                ajax: {
                    url: '{{ path('students_specialisation_list', {id: specialisation.id}) }}',
                    dataSrc: ''
                },
                columns: [
                    {
                        title: 'id',
                        data:'id'
                    },
                    {
                        title: 'Civilité',
                        data:'gender'
                    },
                    {
                        title: 'Prénom',
                        data:'firstname'
                    },
                    {
                        title: 'Nom',
                        data:'lastname'
                    },
                    {
                        title: 'Ville',
                        data:'city'
                    },
                    {
                        title: 'Date de naissance',
                        data:'birthdate'
                    },
                    {
                        title: 'Lycée',
                        data:'school.name'
                    },
                    {
                        title: 'SRM',
                        data:'srm.name'
                    },
                    {
                        title: 'CIRFA',
                        data:'cirfa.city'
                    },
                ],
            });
        } );
    </script>
{% endblock %}